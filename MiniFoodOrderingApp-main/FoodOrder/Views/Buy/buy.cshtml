@{
    Layout = null;
    <link rel="stylesheet" href="~/css/style2.css">
}
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@using FoodOrder.Models.Authentication
@model User
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <script src="https://code.jquery.com/jquery-3.6.3.min.js" integrity="sha256-pvPw+upLPUjgMXY0G+8O0xUf+/Im1MZjXxxgOcBQBXU=" crossorigin="anonymous"></script>
      
    <title>Document</title>
    <link rel="stylesheet"
          href="https://unpkg.com/leaflet@1.9.2/dist/leaflet.css" />
  

</head>


<body>
    <div class="container">
        <div class="main">

            <div class="userInfo">
                <div class="stepContainer">
                    <span style="display: block; width: 30px;height: 30px;background-color:#ea004b; text-align: center;line-height:30px;color: white;">1</span>
                    <h3 style="margin-left: 20px;">Kişisel Bilgileri</h3>
                </div>
                <div>

                    <h3 id="name">Name:@Model.name</h3>
                    <h5 class="Gmail" style="color:#767676;">Gmail: @Model.Email</h5>
                    <h5 id="phoneNumber" style="color:#767676;">Tel No: @Model.phone</h5>
                </div>
            </div>



            <div class="payment">
                <div class="stepContainer">
                    <span style="display: block; width: 30px;height: 30px;background-color:#ea004b; text-align: center;line-height:30px;color: white;">2</span>
                    <h4 style="margin-left: 20px;">Ödeme</h4>
                </div>
                <div class="card">

                    
                    <div class="icons">
                        <img src="https://i.imgur.com/2ISgYja.png" width="30">
                        <img src="https://i.imgur.com/W1vtnOV.png" width="30">
                        <img src="https://i.imgur.com/35tC99g.png" width="30">
                        <img src="https://i.imgur.com/2ISgYja.png" width="30">
                    </div>
                  
                 
                        <input type="text" id="cardNo" placeholder="Kart No" required>
                        <div class="cardinfo">
                            <input type="text" id="time" placeholder="Ay/Yıl" required>
                            <input type="text" id="CVV" placeholder="CVV" required>
                        </div>
                        <input type="text" id="cardOwner" placeholder="Kart Sahibi" required>

                             </div>

                          <button  class="buy" onclick="padding()">Satın Al</button>
                
                   
               
            </div>
        </div>


        <div id="map" style="width:40%;height:540px;"> </div>
        <div class="addressDetail" style="width: 400px; color: #cd0042;">
            <p id="detail"></p>
            <span style="color:black;">Adres:</span>   <input type="text" placeholder="Mahhale/Ev no">
        </div>
    </div>
   
    <script src="https://unpkg.com/leaflet@1.9.2/dist/leaflet.js"></script>
    <script src="~/js/js2.js"></script>

</body>
</html>
